<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000">

    <ListView
        android:id="@+id/sjlive_act_lv_chat"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="80dp" />

    <com.qianf.ly.pandatv.decideView.LYRecycleView
        android:id="@+id/sjlive_act_rv_gift"
        android:layout_width="250dp"
        android:layout_height="180dp"
        android:layout_above="@id/sjlive_act_lv_chat" />

    <RelativeLayout


        android:layout_margin="8dp"
        android:padding="2dp"
        android:id="@+id/sjlive_act_rl"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:background="@drawable/sjlive_ll_banck"
        android:onClick="onClick">

        <ImageView
            android:id="@+id/sjlive_act_iv_zhubotouxiang"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:src="@mipmap/ic_launcher" />

        <TextView
            android:id="@+id/sjlive_act_tv_zhuboname"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:layout_toRightOf="@+id/sjlive_act_iv_zhubotouxiang"
            android:gravity="center"
            android:text="asd"
            android:textColor="@android:color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/sjlive_act_tv_zhubonum"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/sjlive_act_tv_zhuboname"
            android:layout_toRightOf="@id/sjlive_act_iv_zhubotouxiang"
            android:gravity="center"
            android:text="1232365"
            android:textColor="@android:color/white" />


    </RelativeLayout>
    
    <CheckBox
        android:onClick="onClick"
        android:id="@+id/sjlive_act_cb_guangzhu"
        android:layout_marginTop="15dp"
        android:text="关注"
        android:textSize="15sp"
        android:gravity="center"
        android:button="@null"
        android:textColor="@android:color/white"
        android:background="@drawable/jslive_act_chebox_guanzhu"
        android:layout_toRightOf="@+id/sjlive_act_rl"
        android:layout_width="50dp"
        android:layout_height="30dp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/sjlive_act_rv_person"
        android:layout_margin="5dp"
        android:layout_toRightOf="@+id/sjlive_act_cb_guangzhu"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <ImageView
        android:layout_margin="5dp"
        android:id="@+id/sjlive_act_iv_back"
        android:background="@mipmap/zhibojian_back"
        android:layout_width="50dp"
        android:onClick="onClick"
        android:layout_alignParentRight="true"
        android:layout_height="50dp" />
    

</RelativeLayout>