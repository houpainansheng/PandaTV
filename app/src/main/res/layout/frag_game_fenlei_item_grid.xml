    <TextView
        android:id="@+id/fenlei_item_grid_item_tv"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="小标题"
        android:textSize="10sp"
        android:textColor="@color/colorGray6"/>

</LinearLayout>