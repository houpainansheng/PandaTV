<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ListView
        android:id="@+id/frag_chat_lv"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"

        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:onClick="onClick"
            android:id="@+id/frag_chat_iv_baioqing"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/input_icon" />

        <EditText
            android:id="@+id/frag_chat_et"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="10dp"
            android:layout_weight="4"
            android:background="@drawable/frag_paihang_paihang_rg" />


        <ImageView
            android:onClick="onClick"


            android:id="@+id/frag_chat_iv_shuru"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/input_send_pressed" />

        <ImageView
            android:id="@+id/frag_chat_iv_gift"
            android:onClick="onClick"

            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@mipmap/input_icon_gif" />


    </LinearLayout>

</LinearLayout>