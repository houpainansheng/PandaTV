<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <android.support.v4.view.ViewPager
        android:id="@+id/frag_game_vp_lunbo"
        android:layout_width="match_parent"
        android:layout_height="150dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/frag_game_iv_first_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleX="0.5"
            android:scaleY="0.75"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/game_cate_default_icon"/>
        <ImageView
            android:id="@+id/frag_game_iv_second_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleX="0.5"
            android:scaleY="0.75"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/game_cate_default_icon"/>
        <ImageView
            android:id="@+id/frag_game_iv_third_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleX="0.5"
            android:scaleY="0.75"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/game_cate_default_icon"/>
        <ImageView
            android:id="@+id/frag_game_iv_forth_icon"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:scaleX="0.5"
            android:scaleY="0.75"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@mipmap/game_cate_default_icon"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:orientation="horizontal">
        <TextView
            android:gravity="center"
            android:id="@+id/frag_game_tv_first_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="游戏名称"
            android:textSize="10sp"
            android:textColor="@color/colorGray9"/>
        <TextView
            android:gravity="center"
            android:id="@+id/frag_game_tv_second_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="游戏名称"
            android:textSize="10sp"
            android:textColor="@color/colorGray9"/>
        <TextView
            android:gravity="center"
            android:id="@+id/frag_game_tv_third_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="游戏名称"
            android:textSize="10sp"
            android:textColor="@color/colorGray9"/>
        <TextView
            android:gravity="center"
            android:id="@+id/frag_game_tv_forth_name"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:onClick="onClick"
            android:text="游戏名称"
            android:textSize="10sp"
            android:textColor="@color/colorGray9"/>
    </LinearLayout>

</LinearLayout>