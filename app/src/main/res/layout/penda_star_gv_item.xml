<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <ImageView
        android:id="@+id/penda_star_photo"
        android:layout_width="200dp"
        android:layout_height="160dp"
        android:src="@mipmap/ic_launcher"
        />
    <TextView
        android:id="@+id/penda_star_nickName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/penda_star_photo"
        android:layout_alignLeft="@id/penda_star_photo"
        android:text="名字"
        />
    <ImageView
        android:id="@+id/penda_star_level"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/penda_star_nickName"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:paddingLeft="15dp"
        android:textColor="@color/colorWhite"
        android:gravity="center"
        android:background="@mipmap/xingyan_4"
        android:layout_alignBottom="@id/penda_star_nickName"/>
    <TextView
        android:id="@+id/penda_star_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
         android:ellipsize="end"
        android:maxLines="1"
        android:layout_above="@id/penda_star_nickName"
        android:textColor="@color/colorWhite"
        android:layout_marginBottom="10dp"
        android:layout_alignLeft="@id/penda_star_photo"
        android:text="标题"
        />
    <TextView
        android:id="@+id/penda_star_personnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/penda_star_name"
        android:layout_alignRight="@id/penda_star_photo"
        android:text="12345"
        />
</RelativeLayout>